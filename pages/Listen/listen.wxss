/*首页选择的字体颜色*/
.color-red {
  color: #ff3b40;
}
/*全局的下边线颜色*/
.bottom-color-c {
  border-bottom: 1rpx solid #ccc;
}
.libr {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.urlStylpe {
  color: #000ecc;
  text-decoration: underline;
}
page {
  width: 100%;
  height: auto;
  background: #eeeeee;
  letter-spacing: 0rpx;
  color: #666666;
  overflow-y: auto;
  overflow-x: hidden;
  font-family: Helvetica;
  font-size: 32rpx;
  line-height: 1.6;
}
page > view {
  box-sizing: border-box;
  overflow: hidden;
}
i {
  font-style: normal;
}
image {
  width: 100%;
  height: auto;
}
.contain {
  background-size: contain !important;
}
.cover {
  background-size: cover !important;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: stretch;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}
.content {
  width: 90%;
  height: auto;
  padding: 0 5%;
  color: #333333;
  font-size: 31rpx;
  background: #ffffff;
}
.hide {
  display: none;
}
.show {
  display: block;
}
.showflex {
  display: flex;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.disabled {
  pointer-events: none;
  cursor: default;
  opacity: 0.6;
}
.indexa > .indexList {
  width: 92%;
  height: auto;
  padding: 0rpx 4% 0;
  background: #ffffff;
}
.indexa > .indexList .indexListLabel {
  height: 160rpx;
  width: 100%;
  padding-top: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.indexa > .indexList .indexListLabel:last-of-type {
  border-bottom: 0rpx solid #ccc;
}
.indexa > .indexList .indexListLabelpic {
  width: 20%;
  height: 128rpx;
  margin-right: 4%;
  float: left;
}
.indexa > .indexList .indexListLabelpic image {
  width: 100%;
  height: 128rpx;
}
.indexa > .indexList .indexListLabelContent {
  float: right;
  width: 76%;
}
.indexa > .indexList .indexListLabelContent view {
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  white-space: nowrap;
}
.indexa > .indexList .txt1 {
  color: #333333;
  font-size: 28rpx;
  width: 100%;
  margin-bottom: 6rpx;
}
.indexa > .indexList .txt2 {
  color: #888888;
  font-size: 24rpx;
  width: 100%;
  margin-bottom: 16rpx;
}
.indexa > .indexList .txt3 {
  color: #888888;
  font-size: 20rpx;
}
.indexa > .indexList .mar {
  margin-right: 20rpx;
}
.listenWrap {
  width: 100%;
  height: auto;
  font-size: 28rpx;
  color: #333333;
}
.listenWrap .lisdis {
  width: 94%;
  height: auto;
  padding: 3%;
  background: #ffffff;
}
.listenWrap .lisdis .lisenimg {
  width: 22rpx;
}
.listenWrap .lisdis > .lisdown {
  display: flex;
  justify-content: space-between;
}
.listenWrap .lisdis > .lisdown > .lisdownPic {
  display: flex;
  align-items: center;
}
.listenWrap > .audioModel {
  width: 92%;
  height: auto;
  padding: 4%;
  background: #ffffff;
  margin-top: 20rpx;
}
.listenWrap > .audioModel .body-view {
  overflow: hidden;
}
.listenWrap > .audioModel .body-view view:nth-of-type(1),
.listenWrap > .audioModel .body-view view:nth-of-type(3) {
  width: 10%;
  text-align: center;
  margin-top: 12rpx;
}
.listenWrap > .audioModel .body-view view:nth-of-type(2) {
  width: 80%;
}
.listenWrap > .audioModel .downBtn {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.listenWrap > .audioModel .downBtn view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.listenWrap > .audioModel .downBtn view:nth-of-type(1) image,
.listenWrap > .audioModel .downBtn view:nth-of-type(3) image {
  width: 37rpx;
  height: auto;
}
.listenWrap > .audioModel .downBtn view:nth-of-type(2) image {
  width: 90rpx;
  height: auto;
}
.listenWrap .downText {
  font-size: 22rpx;
  text-align: center;
  line-height: 150rpx;
  color: #bbbbbb;
}
